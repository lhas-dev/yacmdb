<p style="color: green"><%= notice %></p>
<div class="row">
  <div class="col-8">
    <h1>People</h1>
  </div>
  <div class="col-4 text-end">
    <%= link_to "Add New Person", new_person_path, class: "btn btn-primary" %>
  </div>
</div>
<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Department</th>
        <th>Team</th>
        <th>Phone</th>
        <th>Email</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @people.each do |person| %>
        <tr>
          <td><%= person.name %>
          </td>
          <td><%= person.department %></td>
          <td><%= person.team %></td>
          <td><%= person.phone %></td>
          <td><%= person.email %></td>
          <td>
            <div class="d-flex">
              <%= link_to "Show", person, class: "btn btn-outline-primary" %>
              <%= button_to "Delete", person, method: :delete, class: "btn ms-2 btn-outline-danger" %></div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
